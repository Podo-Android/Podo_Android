<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dee9ff"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <ImageView
        android:layout_width="95.4dp"
        android:layout_height="96dp"
        android:src="@drawable/logo"
        android:layout_marginTop="180.3dp"
        android:layout_gravity="center_horizontal"
        />

    <ImageView
        android:layout_width="40.2dp"
        android:layout_height="14.1dp"
        android:layout_marginTop="19dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo_text"/>


    <LinearLayout
        android:layout_width="164.2dp"
        android:layout_height="27.7dp"
        android:orientation="horizontal"
        android:layout_marginTop="114.4dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/edge_round">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CORD:"
            android:layout_marginLeft="4.4dp"
            android:textSize="8.8sp"
            android:layout_gravity="center_vertical"
            />

        <EditText
            android:id="@+id/login_code_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            />


    </LinearLayout>


    <Button
        android:id="@+id/login_login_btn"
        android:layout_width="86.8dp"
        android:layout_height="27.5dp"
        android:background="@drawable/edge_round"
        android:text="Login"
        android:textColor="#ff755d"
        android:layout_marginTop="36.1dp"
        android:textSize="12.3sp"
        android:layout_gravity="center_horizontal"
        />




</LinearLayout>